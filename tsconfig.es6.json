{
  "compilerOptions": {
    "outDir": ".built/",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": false,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "mode": "development",
  "include": [ "./src/" ],
  "exclude": ["node_modules",
    "**/audio_utils.ts",
  "**/annotation_instance.tsx",
  "**/category_selection.tsx"]
}
